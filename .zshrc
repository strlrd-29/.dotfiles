############# Wallpaper Setup ###################

wal-fill() {
  wal -n -i "$@"
  feh --bg-fill "$(< "${HOME}/.cache/wal/wal")"
}

wal-random() {
  images=(/home/ouassim/wallpapers/*)
  wal -n -i ${images[$(( $RANDOM % ${#images[@]}))]}
  feh --bg-fill "$(< "${HOME}/.cache/wal/wal")"
}

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion


# Poetry
fpath+=~/.zfunc
autoload -Uz compinit && compinit

# Init path variables
export PATH="/home/ouassim/.local/bin:$PATH"

# Dotfiles bare git repo https://www.saintsjd.com/2011/01/what-is-a-bare-git-repository/
alias config='/usr/bin/git --git-dir=/home/ouassim/.cfg/ --work-tree=/home/ouassim'

# Create Neovim alias 
alias nv='nvim .'
alias vim='nvim'

# Pyenv
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init -)"

# pnpm
export PNPM_HOME="/home/ouassim/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
